# backend/Dockerfile

# 1) Builder with cached modules
FROM golang:1.23 AS builder
WORKDIR /backend

# Cache go modules
COPY go.mod go.sum ./
RUN go mod download

# Copy source and build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /backend/main ./cmd/main.go

# 2) Small runtime image
FROM alpine:3.19
RUN apk add --no-cache ca-certificates
WORKDIR /app
COPY --from=builder /backend/main /app/main

EXPOSE 8080
CMD ["./main"]
